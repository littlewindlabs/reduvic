{
  "name": "reduvic",
  "version": "1.0.0",
  "displayName": "Reduvic",
  "author": "Littlewind Labs",
  "description": "Browser extension to help manage the impact of graphic content",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "pack:firefox": "web-ext build --source-dir ./dist/ --overwrite-dest",
    "deploy:firefox": "web-ext sign --source-dir ./dist/ --api-key=$AMO_JWT_ISSUER --api-secret=$AMO_JWT_SECRET --channel=unlisted",
    "watch": "vite build --watch --mode development --minify false",
    "dev": "vite",
    "serve:firefox": "web-ext run --start-url \"about:debugging#/runtime/this-firefox\"  --source-dir ./dist/",
    "serve:chrome": "web-ext run -t chromium --start-url \"https://example.com\" --source-dir ./dist/",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "license": "MIT",
  "devDependencies": {
    "@samrum/vite-plugin-web-extension": "^5.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.2",
    "@types/chrome": "^0.0.254",
    "@types/webextension-polyfill": "^0.10.6",
    "autoprefixer": "^10.4.19",
    "install": "^0.13.0",
    "postcss": "^8.4.38",
    "svelte": "^4.2.5",
    "svelte-check": "^3.6.0",
    "svelte-headlessui": "^0.0.33",
    "svelte-preprocess": "^5.1.0",
    "tailwindcss": "^3.4.3",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "web-ext": "^7.8.0"
  },
  "dependencies": {
    "webextension-polyfill": "^0.10.0"
  }
}
